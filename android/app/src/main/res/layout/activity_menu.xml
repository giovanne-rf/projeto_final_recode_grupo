<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/buttonCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela Curso"
        android:onClick="abrirTelaCurso"
        app:layout_constraintEnd_toStartOf="@+id/buttonDepartamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirTelaDepartamento"
        android:text="Tela Departamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCurso"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDepartamentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhe do Departamento"
        android:onClick="abrirTelaDepartamentoDetalhes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDepartamento" />
</androidx.constraintlayout.widget.ConstraintLayout>